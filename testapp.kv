MDScreenManager:
    Startseite:
        name: "startseite"
    Suchaufgaben:
        name: "suchaufgaben"
    PlusMinusRechnungen:
        name: "plusminus"
        
<Startseite>:
    FloatLayout:    
        MDLabel:
            text: "Willkommen zur Rechenapp"
            halign: "center"
            font_size: dp(22)
            font_family:    "Italic"
            size_hint_y: 0.2
            pos_hint: {"center_x": 0.5, "y": 0.8}
            
        MDRoundFlatIconButton:
            text: "Zahlen suchen"
            icon: "menu"
            line_width: 2
            pos_hint: {"center_x": 0.5, "y": 0.7 }
            size_hint_x: 0.8
            size_hint_y: 0.09
            on_press:
                app.root.current ="suchaufgaben"
                app.root.transition.direction ="down"
                
        MDRoundFlatIconButton:
            text: "Plus-Minus-Aufgaben"
            icon: "plus"
            line_width: 2
            pos_hint: {"center_x": 0.5, "y": 0.57 }
            size_hint_x: 0.8
            size_hint_y: 0.09
            on_press:
                app.root.current ="plusminus"
                app.root.transition.direction ="down"
            
            
            
    
<Suchaufgaben>:
    FloatLayout:
        MDIconButton:
            icon: "close"
            size_hint_y: 0.05
            size_hint_x: 0.05
            pos_hint: {"top":0.99, "x": 0.90}
            on_release:
                app.root.current ="startseite"
                app.root.transition.direction ="up"
                
<PlusMinusRechnungen>:
    FloatLayout:
        MDIconButton:
            icon: "close"
            size_hint_y: 0.05
            size_hint_x: 0.05
            pos_hint: {"top":0.99, "x": 0.90}
            on_release:
                root.click_close()
                app.root.current ="startseite"
                app.root.transition.direction ="up"
                
    FloatLayout:                        # Start Button Plus Minus
        MDRaisedButton:
            id: startbtn
            text:"Start"
            size_hint_y: 0.1
            size_hint_x: 0.7
            pos_hint: {"center_x":0.5, "center_y": 0.50}
            opacity: 1
            disabled: False
            on_press: root.click_start()#click_start Methode ausführen
        # Label das die Rechnung anzeigt
        MDLabel:
            id: counter_right
            text: 'Richtig: 0'
            color: 'green'
            size_hint_y: 0.1
            size_hint_x: 0.2
            pos_hint: {'top':0.9, 'x': 0.01}
            opacity: 0
        MDLabel:
            id: counter_false
            text: 'Falsch: 0'
            color: 'red'
            size_hint_y: 0.1
            size_hint_x: 0.2
            pos_hint: {'top':0.9, 'x': 0.8}
            opacity: 0
            
        MDLabel:
            id: rechnung_label
            text: ""
            halign: "center"
            font_size: dp(27)
            size_hint_y: 0.1
            pos_hint: {"center_x":0.5, "top": 0.8}
            opacity: 0
            
        # Eingabe
        MDTextField:
            id: eingabe
            mode: "rectangle"
            hint_text: 'Lösung'
            valign: 'center'
            size_hint_x: 0.6
            size_hint_y: 0.1
            pos_hint: {"center_x": 0.5, "top": 0.65 }
            opacity: 0
            
        MDRaisedButton:
            id: check
            text: 'Prüfen'
            opacity: 0
            pos_hint: {"center_x":0.5, "top": 0.50}
            on_press: root.check_answer()
            
        MDLabel:
            id: richtig
            text:''
            halign: 'center'
            opacity: 0
            size_hint_y: 0.1
            pos_hint: {"top": 0.45}
            
            
